{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "Nuance": true
    },
    "extends": "react-app",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}